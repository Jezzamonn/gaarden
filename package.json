{
  "name": "ld45",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "webpack": "src/js/**",
    "html": {
      "patterns": [
        "src/index.html",
        "script/makehtml.js"
      ],
      "extensions": "html,js"
    },
    "css": {
      "patterns": [
        "src/css/**"
      ],
      "extensions": "css"
    }
  },
  "scripts": {
    "start": "http-server",
    "reload": "reload -b -d build/web",
    "build": "npm-run-all --parallel webpack html css",
    "webpack": "webpack || exit 1",
    "html": "node script/makehtml.js --title='ld45' --path=ld45",
    "css": "mkdir -p build/web/css/ && rsync -a --delete src/css/ build/web/css/",
    "clean": "rm -rf build/*",
    "watch": "npm-watch"
  },
  "author": "Jezzamon",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.7.0",
    "canvas": "^1.6.12",
    "command-line-args": "^5.0.2",
    "http-server": "^0.11.1",
    "mkdirp": "^0.5.1",
    "mustache": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.3.0",
    "reload": "^2.3.1",
    "single-line-log": "^1.1.2",
    "string-format": "^2.0.0",
    "webpack": "^3.11.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "random-js": "^2.1.0",
    "tone": "^13.8.25"
  }
}
